{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": false,
    "sourceMap": true,
    "noEmit": false,
    "outDir": "./dist",
    "allowImportingTsExtensions": true,
    "rewriteRelativeImportExtensions": true
  },
  "include": [
    "./greenwood-spectrum-theme.ts",
    "src/components/**/*.ts",
    "src/layouts/**/*.ts",
    "src/plugins/**/*.ts",
    "src/lib/**/*.ts",
    "src/styles/**/*.css"
  ],
  "exclude": ["node_modules", "dist", "public"]
}
